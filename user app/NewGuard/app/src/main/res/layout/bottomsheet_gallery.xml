<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="146dp"
    android:background="@drawable/gradient1"
    android:elevation="2sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/addnewguest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibGallery"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_whitebrightness_1_black_24dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_add_a_photo_black_24dp" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_below="@+id/ibGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/roboto"
                    android:text="@string/gallery"
                    android:textColor="@color/color_black"
                    android:textSize="12dp" />

               <!-- <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/roboto"
                    android:text="@string/guest_bottomsheet"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:textSize="12dp" />-->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/todaysguest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibCamera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_whitebrightness_1_black_24dp" />


                <ImageView
                    android:layout_marginTop="18dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_camera_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_below="@+id/ibCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/roboto"
                    android:layout_centerHorizontal="true"
                    android:text="@string/camera"
                    android:textColor="@color/color_black"
                    android:textSize="12dp" />

                <!--<TextView
                    android:layout_below="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/roboto"
                    android:text="@string/guest_bottomsheet"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_black"
                    android:textSize="12dp" />-->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/upcguest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibRemove"
                    android:layout_centerHorizontal="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_whitebrightness_1_black_24dp" />


                <ImageView
                    android:layout_marginTop="18dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/t3"
                    android:layout_below="@+id/ibRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/roboto"
                    android:text="@string/remove"
                    android:textColor="@color/color_black"
                    android:textSize="12dp" />

                <TextView
                    android:layout_below="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/roboto"
                    android:text="@string/photo"
                    android:textColor="@color/color_black"
                    android:textSize="12dp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>